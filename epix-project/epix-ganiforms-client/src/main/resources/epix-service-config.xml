<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                      http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<bean id="identifierDomain" class="org.emau.icmvc.ganimed.common.model.IdentifierDomain">
		<property name="name" value="IT-Kohortenmanagement" />
		<property name="oid" value="1.2.276.0.76.3.1.132.100.1.1.1.3.0.1.1" />
	</bean>

	<bean id="account" class="org.emau.icmvc.ganimed.epix.ws.security.Account">
		<property name="user" value="minca" />
		<property name="password" value="minca2011" />
	</bean>

	<bean id="authCallback"
		class="org.emau.icmvc.ganimed.epix.ws.security.AuthPasswordCallback">
		<constructor-arg>
			<ref bean="account"></ref>
		</constructor-arg>
	</bean>

	<bean id="proxyFactory" class="org.apache.cxf.jaxws.JaxWsProxyFactoryBean">
		<property name="serviceClass"
			value="org.emau.icmvc.ganimed.epix.service.EPIXService" />
		<property name="address"
			value="http://141.53.72.219:8080/epix/EPIXBeanService" />
		<property name="inInterceptors">
			<list>
				<ref bean="logIn" />
				<ref bean="saajIn" />
				<ref bean="encryptIn" />
			</list>
		</property>
		<property name="outInterceptors">
			<list>
				<ref bean="authOut" />
				<ref bean="logOut" />
				<ref bean="saajOut" />
				<ref bean="encryptOut" />
			</list>
		</property>
	</bean>

	<bean id="client" class="org.emau.icmvc.ganimed.epix.service.EPIXService"
		factory-bean="proxyFactory" factory-method="create" />


	<!-- Logging Outinterceptor -->
	<bean id="logOut" class="org.apache.cxf.interceptor.LoggingOutInterceptor" />

	<bean id="saajOut" class="org.apache.cxf.binding.soap.saaj.SAAJOutInterceptor" />

	<!-- Authentication Outinterceptor -->
	<bean id="authOut" class="org.apache.cxf.ws.security.wss4j.WSS4JOutInterceptor">
		<constructor-arg>
			<map>
				<entry key="action" value="UsernameToken" />
				<entry key="user" value="minca" />
				<entry key="passwordType" value="PasswordText" />
				<entry key="passwordCallbackClass"
					value="org.emau.icmvc.ganimed.epix.ws.security.AuthPasswordCallback" />
			</map>
		</constructor-arg>
	</bean>

	<!-- Encryption OutInterceptor -->
	<bean id="encryptOut" class="org.apache.cxf.ws.security.wss4j.WSS4JOutInterceptor">
		<constructor-arg>
			<map>
				<entry key="action" value="Timestamp Signature Encrypt" />
				<entry key="user" value="epix-client" />
				<entry key="signaturePropFile" value="epix-security.properties" />
				<entry key="signatureKeyIdentifier" value="DirectReference" />
				<entry key="passwordCallbackClass"
					value="org.emau.icmvc.ganimed.epix.ws.security.KeystorePasswordCallback" />
				<entry key="signatureParts"
					value="{Element}{http://docs.oasis-open.org/wss/2004/01/oasis-200401-wss-wssecurity-utility-1.0.xsd}Timestamp;{Element}{http://schemas.xmlsoap.org/soap/envelope/}Body" />
				<entry key="encryptionPropFile" value="epix-security.properties" />
				<entry key="encryptionUser" value="epix-server" />
				<entry key="encryptionParts"
					value="{Element}{http://www.w3.org/2000/09/xmldsig#}Signature;{Content}{http://schemas.xmlsoap.org/soap/envelope/}Body" />
				<entry key="encryptionSymAlgorithm" value="http://www.w3.org/2001/04/xmlenc#tripledes-cbc" />
				<entry key="encryptionKeyTransportAlgorithm" value="http://www.w3.org/2001/04/xmlenc#rsa-1_5" />
			</map>
		</constructor-arg>
	</bean>


	<!-- Logging InInterceptor -->
	<bean id="logIn" class="org.apache.cxf.interceptor.LoggingInInterceptor" />

	<bean id="saajIn" class="org.apache.cxf.binding.soap.saaj.SAAJInInterceptor" />

	<!-- Decryption InInterceptor -->
	<bean id="encryptIn" class="org.apache.cxf.ws.security.wss4j.WSS4JInInterceptor">
		<constructor-arg>
			<map>
				<entry key="action" value="Timestamp Signature Encrypt" />
				<entry key="signaturePropFile" value="epix-security.properties" />
				<entry key="passwordCallbackClass"
					value="org.emau.icmvc.ganimed.epix.ws.security.KeystorePasswordCallback" />
				<entry key="decryptionPropFile" value="epix-security.properties" />
			</map>
		</constructor-arg>
	</bean>
</beans>
