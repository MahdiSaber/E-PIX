<ma:MatchingConfiguration
	xmlns:ma="http://www.ganimed.icmvc.emau.org/deduplication/config/model"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	
	xsi:schemaLocation="http://www.ganimed.icmvc.emau.org/deduplication/config/model matching-config-1.5.0.xsd ">
	<version>1.0.0</version>
	<pageSize>1000</pageSize>
	<report-file></report-file>
	<deduplication-algorithm>org.emau.icmvc.ganimed.deduplication.impl.FellegiSunterAlgorithm</deduplication-algorithm>


	<required-config>
		<required-type>
			<qualified-class-name>org.emau.icmvc.ganimed.epix.core.persistence.model.Contact</qualified-class-name>
			<required-field>
				<field-name>street</field-name>
			</required-field>
			<required-field>
				<field-name>city</field-name>
			</required-field>
			<required-field>
				<field-name>zipCode</field-name>
			</required-field>
		</required-type>
		
		<required-type>
			<qualified-class-name>org.emau.icmvc.ganimed.epix.core.persistence.model.Patient</qualified-class-name>
			<required-field>
				<field-name>firstName</field-name>
			</required-field>
			<required-field>
				<field-name>lastName</field-name>
			</required-field>
			<required-field>
				<field-name>birthDate</field-name>
			</required-field>
			<required-field>
				<field-name>gender</field-name>
			</required-field>
		</required-type>
	
	</required-config>

	<preprocessing-config>
		<preprocessing-type>
			<qualified-class-name>org.emau.icmvc.ganimed.epix.core.persistence.model.Contact</qualified-class-name>
			<preprocessing-field>
				<field-name>city</field-name>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern>-</input-pattern>
					<output-pattern></output-pattern>
				</transformation>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern> </input-pattern>
					<output-pattern></output-pattern>
				</transformation>
				<transformation xsi:type="ma:ComplexTransformation">
					<qualified-class-name>org.emau.icmvc.ganimed.deduplication.preprocessing.impl.ToUpperCaseTransformation</qualified-class-name>
					<transformation-method>transform</transformation-method>
				</transformation>
				<transformation xsi:type="ma:ComplexTransformation">
					<qualified-class-name>org.emau.icmvc.ganimed.deduplication.preprocessing.impl.CharsMutationTransformation</qualified-class-name>
					<transformation-method>transform</transformation-method>
				</transformation>
			</preprocessing-field>
			<preprocessing-field>
				<field-name>zipCode</field-name>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern>-</input-pattern>
					<output-pattern></output-pattern>
				</transformation>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern> </input-pattern>
					<output-pattern></output-pattern>
				</transformation>
			</preprocessing-field>
			<preprocessing-field>
				<field-name>street</field-name>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern> </input-pattern>
					<output-pattern></output-pattern>
				</transformation>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern>-</input-pattern>
					<output-pattern></output-pattern>
				</transformation>
				<transformation xsi:type="ma:ComplexTransformation">
					<qualified-class-name>org.emau.icmvc.ganimed.deduplication.preprocessing.impl.ToUpperCaseTransformation</qualified-class-name>
					<transformation-method>transform</transformation-method>
				</transformation>
				<transformation xsi:type="ma:ComplexTransformation">
					<qualified-class-name>org.emau.icmvc.ganimed.deduplication.preprocessing.impl.CharsMutationTransformation</qualified-class-name>
					<transformation-method>transform</transformation-method>
				</transformation>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern>STRASSE</input-pattern>
					<output-pattern>STR</output-pattern>
				</transformation>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern>STRASE</input-pattern>
					<output-pattern>STR</output-pattern>
				</transformation>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern>STR </input-pattern>
					<output-pattern>STR</output-pattern>
				</transformation>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern>STR.</input-pattern>
					<output-pattern>STR</output-pattern>
				</transformation>
			</preprocessing-field>
		</preprocessing-type>
		<preprocessing-type>
			<qualified-class-name>org.emau.icmvc.ganimed.epix.core.persistence.model.Patient</qualified-class-name>
			<preprocessing-field required="true">
				<field-name>firstName</field-name>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern> </input-pattern>
					<output-pattern></output-pattern>
				</transformation>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern>-</input-pattern>
					<output-pattern></output-pattern>
				</transformation>
				<transformation xsi:type="ma:ComplexTransformation">
					<qualified-class-name>org.emau.icmvc.ganimed.deduplication.preprocessing.impl.ToUpperCaseTransformation</qualified-class-name>
					<transformation-method>transform</transformation-method>
				</transformation>
				<transformation xsi:type="ma:ComplexTransformation">
					<qualified-class-name>org.emau.icmvc.ganimed.deduplication.preprocessing.impl.CharsMutationTransformation</qualified-class-name>
					<transformation-method>transform</transformation-method>
				</transformation>
			</preprocessing-field>
			<preprocessing-field>
				<field-name>middleName</field-name>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern> </input-pattern>
					<output-pattern></output-pattern>
				</transformation>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern>-</input-pattern>
					<output-pattern></output-pattern>
				</transformation>
				<transformation xsi:type="ma:ComplexTransformation">
					<qualified-class-name>org.emau.icmvc.ganimed.deduplication.preprocessing.impl.ToUpperCaseTransformation</qualified-class-name>
					<transformation-method>transform</transformation-method>
				</transformation>
				<transformation xsi:type="ma:ComplexTransformation">
					<qualified-class-name>org.emau.icmvc.ganimed.deduplication.preprocessing.impl.CharsMutationTransformation</qualified-class-name>
					<transformation-method>transform</transformation-method>
				</transformation>
			</preprocessing-field>
			<preprocessing-field>
				<field-name>lastName</field-name>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern> </input-pattern>
					<output-pattern></output-pattern>
				</transformation>
				<transformation xsi:type="ma:SimpleTransformation">
					<input-pattern>-</input-pattern>
					<output-pattern></output-pattern>
				</transformation>
				<transformation xsi:type="ma:ComplexTransformation">
					<qualified-class-name>org.emau.icmvc.ganimed.deduplication.preprocessing.impl.ToUpperCaseTransformation</qualified-class-name>
					<transformation-method>transform</transformation-method>
				</transformation>
				<transformation xsi:type="ma:ComplexTransformation">
					<qualified-class-name>org.emau.icmvc.ganimed.deduplication.preprocessing.impl.CharsMutationTransformation</qualified-class-name>
					<transformation-method>transform</transformation-method>
				</transformation>
			</preprocessing-field>
		</preprocessing-type>
	</preprocessing-config>
	<object-of-single-truth>
		<global-threshold>
			<threshold>1.5</threshold>
			<reject-threshold>10</reject-threshold>
		</global-threshold>
		<object-type
			qualified-class-name="org.emau.icmvc.ganimed.epix.core.persistence.model.Person">
			<!-- <object-field>
				<name>suffix</name>
				<simple-type>
					<property-type>java.lang.String</property-type>
					<description>description</description>
					<threshold-config>
						<threshold>0.925</threshold>
						<weight>1</weight>
					</threshold-config>
					<algorithm>org.emau.icmvc.ganimed.deduplication.impl.LevenstheinMatchingAlgorithm
					</algorithm>
				</simple-type>
			</object-field> -->
			<object-field>
				<name>firstName</name>
				<simple-type>
					<property-type>java.lang.String</property-type>
					<description>description</description>
					<threshold-config>
						<threshold>0.95</threshold>
						<weight>6</weight>
					</threshold-config>
					<algorithm>org.emau.icmvc.ganimed.deduplication.impl.LevenstheinMatchingAlgorithm</algorithm>
				</simple-type>
			</object-field>
			<object-field>
				<name>middleName</name>
				<simple-type>
					<property-type>java.lang.String</property-type>
					<description>description</description>
					<threshold-config>
						<threshold>0.95</threshold>
						<weight>5</weight>
					</threshold-config>
					<algorithm>org.emau.icmvc.ganimed.deduplication.impl.LevenstheinMatchingAlgorithm</algorithm>
				</simple-type>
			</object-field>
			<object-field>
				<name>lastName</name>
				<simple-type>
					<property-type>java.lang.String</property-type>
					<description>description</description>
					<threshold-config>
						<threshold>0.95</threshold>
						<weight>5</weight>
					</threshold-config>
					<algorithm>org.emau.icmvc.ganimed.deduplication.impl.LevenstheinMatchingAlgorithm</algorithm>
				</simple-type>
			</object-field>
			<object-field>
				<name>gender</name>
				<simple-type>
					<property-type>java.lang.String</property-type>
					<description>description</description>
					<threshold-config>
						<threshold>0.98</threshold>
						<weight>5</weight>
					</threshold-config>
					<algorithm>org.emau.icmvc.ganimed.deduplication.impl.LevenstheinMatchingAlgorithm</algorithm>
				</simple-type>
			</object-field>
			<object-field>
				<name>birthDate</name>
				<simple-type>
					<property-type>java.sql.Date</property-type>
					<regex-pattern>yyyyMMdd</regex-pattern>
					<description>description</description>
					<threshold-config>
						<threshold>0.95</threshold>
						<weight>6</weight>
					</threshold-config>
					<algorithm>org.emau.icmvc.ganimed.deduplication.impl.LevenstheinMatchingAlgorithm</algorithm>
				</simple-type>
			</object-field>
			<object-field>
				<name>contacts</name>
				<list-type
					qualified-class-name="org.emau.icmvc.ganimed.epix.core.persistence.model.Contact">
					<object-field>
						<name>street</name>
						<simple-type>
							<property-type>java.lang.String</property-type>
							<description>description</description>
							<threshold-config>
								<threshold>0.9</threshold>
								<weight>3</weight>
							</threshold-config>
							<algorithm>org.emau.icmvc.ganimed.deduplication.impl.LevenstheinMatchingAlgorithm</algorithm>
						</simple-type>
					</object-field>
					<object-field>
						<name>city</name>
						<simple-type>
							<property-type>java.lang.String</property-type>
							<description>description</description>
							<threshold-config>
								<threshold>0.9</threshold>
								<weight>3</weight>
							</threshold-config>
							<algorithm>org.emau.icmvc.ganimed.deduplication.impl.LevenstheinMatchingAlgorithm</algorithm>
						</simple-type>
					</object-field>
					<object-field>
						<name>zipCode</name>
						<simple-type>
							<property-type>java.lang.String</property-type>
							<description>description</description>
							<threshold-config>
								<threshold>0.9</threshold>
								<weight>5</weight>
							</threshold-config>
							<algorithm>org.emau.icmvc.ganimed.deduplication.impl.LevenstheinMatchingAlgorithm</algorithm>
						</simple-type>
					</object-field>
				</list-type>
			</object-field>
		</object-type>
	</object-of-single-truth>
	<blocking>
		<blocking-threshold>
			<threshold>1.0</threshold>
		</blocking-threshold>
		<blocking-type
			qualified-class-name="org.emau.icmvc.ganimed.epix.core.persistence.model.Person">
			<object-field>
				<name>firstName</name>
				<simple-type>
					<property-type>java.lang.String</property-type>
					<description>description</description>
					<threshold-config>
						<reject-threshold>1</reject-threshold>
					</threshold-config>
					<algorithm></algorithm>
				</simple-type>
			</object-field>
			<object-field>
				<name>lastName</name>
				<simple-type>
					<property-type>java.lang.String</property-type>
					<description>description</description>
					<threshold-config>
						<reject-threshold>1</reject-threshold>
					</threshold-config>
					<algorithm></algorithm>
				</simple-type>
			</object-field>
			<!-- <object-field>
				<name>birthDate</name>
				<simple-type>
					<property-type>java.sql.Date</property-type>
					<description>description</description>
					<threshold-config>
						<reject-threshold>0.75</reject-threshold>
					</threshold-config>
					<algorithm></algorithm>
				</simple-type>
			</object-field> -->
			<object-field>
				<name>gender</name>
				<simple-type>
					<property-type>java.lang.String</property-type>
					<description>description</description>
					<threshold-config>
						<reject-threshold>0.75</reject-threshold>
					</threshold-config>
					<algorithm></algorithm>
				</simple-type>
			</object-field>
		</blocking-type>
	</blocking>
</ma:MatchingConfiguration>
